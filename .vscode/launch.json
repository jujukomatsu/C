{
    "MIDebuggerPath": {
        "version": "0.2.0",
        "configurations": [
            {
                "name": "Debug Single File",
                "type": "cppdbg",
                "request": "launch",
                "program": "${fileDirname}/${fileBasenameNoExtension}", 
                "args": [],
                "stopAtEntry": false,
                "cwd": "${workspaceFolder}",
                "environment": [],
                "externalConsole": false,
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ],
                "preLaunchTask": "build",
                "miDebuggerPath": "/usr/bin/gdb",  // Atualize o caminho para o GDB, se necess√°rio
                "internalConsoleOptions": "openOnSessionStart",
                "logging": { "engineLogging": false }
            }
        ],
    }
}